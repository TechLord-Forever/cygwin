inherit qt4

HOMEPAGE="http://www.kde.org/"

case "${PN}:${PV}" in
	kdevplatform:0.*)
		SRC_URI="mirror://kde/unstable/kdevelop/3.${PVP[1]}/src/${P}.tar.bz2"
		;;
	amarok:1.*|kdevelop:3.*)
		SRC_URI="mirror://kde/unstable/${PN}/${PV}/src/${P}.tar.bz2"
		;;
	koffice:1.9.*)
		SRC_URI="mirror://kde/unstable/koffice-${PV}/src/${P}.tar.bz2"
		;;
	kde-l10n-*:*.[89]?)
		SRC_URI="mirror://kde/unstable/${PV}/src/kde-l10n/${P}.tar.bz2"
		;;
	kde-l10n-*:*)
		SRC_URI="mirror://kde/stable/${PV}/src/kde-l10n/${P}.tar.bz2"
		;;
	*:*.[89]?)
		SRC_URI="mirror://kde/unstable/${PV}/src/${P}.tar.bz2"
		;;
	*)
		SRC_URI="mirror://kde/stable/${PV}/src/${P}.tar.bz2"
		;;
esac

SVN_URI="svn://anonsvn.kde.org/home/kde"
SVN_MODULE=${SVN_MODULE:-${ORIG_PN:-${PN}}}

export QTDIR=${QT4_QTDIR}
export QT_PLUGIN_PATH=${QT4_PLUGINSDIR}

kde4_compile() {
	local skip skipargs

	for skip in ${DO_NOT_COMPILE}
	do
		skipargs+=" -DBUILD_${skip}=OFF"
	done

	cygcmake \
		-DAUTOMOC4_EXECUTABLE=/usr/bin/automoc4 \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_EXE_LINKER_FLAGS=-Wl,--enable-auto-import \
		-DCMAKE_MODULE_LINKER_FLAGS=-Wl,--enable-auto-import \
		-DCMAKE_SHARED_LINKER_FLAGS=-Wl,--enable-auto-import \
		-DKDE4_BUILD_TESTS=OFF \
		-DKDE4_ENABLE_FINAL=OFF \
		-DKDE4_ENABLE_FPIE=OFF \
		-DKDE4_INCLUDE_DIR=/usr/include/kde4 \
		-DKDE4_USE_ALWAYS_FULL_RPATH=OFF \
		-DKDE_DISTRIBUTION_TEXT=Cygwin \
		-DQT_MOC_EXECUTABLE=${QT4_MOC} \
		-DQT_INCLUDE_DIR=${QT4_INCLUDEDIR} \
		-DQT_LIBRARY_DIR=${QT4_LIBDIR} \
		-DQT_UIC_EXECUTABLE=${QT4_UIC} \
		${skipargs} \
		"${@}"

	cygmake
}

kde4_install() {
	local doc kdepkg

	cyginstall

	rm -f ${D}/usr/lib/kde4/lib/libkdeinit4_*

	for kdepkg in ${PKG_NAMES:-${PN}}
	do
		for doc in AUTHORS BUGS ChangeLog NEWS README TODO
		do
			if [ -f ${S}/${kdepkg}/${doc} ]
			then
				insinto /usr/share/doc/${kdepkg}-${PV}
				doins ${S}/${kdepkg}/${doc}
			elif [ -f ${S}/${kdepkg#${PN}-}/${doc} ]
			then
				insinto /usr/share/doc/${kdepkg}-${PV}
				doins ${S}/${kdepkg#${PN}-}/${doc}
			fi
		done
	done
}

src_compile() {
	cd ${B}
	kde4_compile
}

src_install() {
	cd ${B}
	kde4_install
}
