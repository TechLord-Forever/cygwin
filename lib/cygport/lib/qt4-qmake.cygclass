inherit qt4

cygqmake4() {
	local pro

	if [ ! -x ${QT4_QMAKE} ]
	then
		error "qt4-devel is required to build this package"
	fi

	for pro in $(find . -name '*.pro')
	do
		rm -f ${pro%/*}/Makefile

		${QT4_QMAKE} -spec cygwin-g++ -o ${pro%/*}/Makefile ${pro} \
			|| error "qmake ${pro} failed"
	done
}

qt4_qmake_compile() {
	cygqmake4
	cygmake
}

# FIXME: This won't work for most packages!!!
qt4_qmake_install() {
	local dll pc

	make install INSTALL_ROOT=${D} || error "make install failed"

	for dll in $(find ${D}${QT4_LIBDIR} -name '*.dll' 2> /dev/null)
	do
		dodir /usr/bin
		mv ${dll} ${D}/usr/bin/
	done

	for pc in $(find ${D}${QT4_LIBDIR}/pkgconfig -name '*.pc' 2> /dev/null)
	do
		dodir /usr/lib/pkgconfig
		mv ${pc} ${D}/usr/lib/pkgconfig/
	done
}

src_compile() {
	lndirs
	cd ${B}
	qt4_qmake_compile
}

src_install() {
	cd ${B}
	qt4_qmake_install
}
