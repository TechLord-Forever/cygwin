# FIXME: multiple versions of same package (not currently available)
ORIG_PN="${PN#ebook-}"

DESCRIPTION="EBook ${ORIG_PN} documentation"
HOMEPAGE="http://code.google.com/p/htmlhelp/"
SRC_URI="http://htmlhelp.googlecode.com/files/${ORIG_PN}-${PV}.tgz"
SRC_DIR="."

ebook_install() {
	if [ ! -e book.devhelp ]
	then
		error "book.devhelp: file not found"
	fi

	insinto /usr/share/devhelp/books/${ORIG_PN}
	newins book.devhelp ${ORIG_PN}.devhelp
	doins book/*
}

src_compile() { :; }

src_install() {
	cd ${S}
	ebook_install
}
