export QTDIR=/usr/lib/qt3

# deprecated
QBINDIR=/usr/lib/qt3/bin
QINCLUDEDIR=/usr/include/qt3
QLIBDIR=/usr/lib/qt3/lib
QDATADIR=/usr/share/qt3

QT3_BINDIR=/usr/lib/qt3/bin
QT3_INCLUDEDIR=/usr/include/qt3
QT3_LIBDIR=/usr/lib/qt3/lib
QT3_PLUGINSDIR=/usr/lib/qt3/plugins
QT3_DATADIR=/usr/share/qt3

QT3_QMAKE=${QT3_BINDIR}/qmake
QT3_MOC=${QT3_BINDIR}/moc
QT3_UIC=${QT3_BINDIR}/uic

PATH="${QBINDIR}:${PATH}"
LDFLAGS+=" -Wl,--enable-auto-import"

cygqmake3() {
	local pro

	if [ ! -x ${QT3_QMAKE} ]
	then
		error "qt3-devel is required to build this package"
	fi

	for pro in $(find . -name '*.pro')
	do
		rm -f ${pro%/*}/Makefile

		${QT3_QMAKE} -spec cygwin-g++ -o ${pro%/*}/Makefile ${pro} \
			|| error "qmake ${pro} failed"
	done
}

# deprecated
qt3_qmake() { cygqmake3 ; }

# FIXME: This won't work for most packages!!!
qt3_install() {
	make install INSTALL_ROOT=${D}/usr/ || error "make install failed"
}

src_compile() {
	lndirs
	cd ${B}
	cygqmake3
	cygmake
}

src_test() {
	:
}

#
# Convenience functions for custom src_install()
#

doqt3inc() {
	insinto ${QT3_INCLUDEDIR}
	doins ${@}
}

doqt3lib() {
	insinto ${QT3_LIBDIR}
	doins ${@}
}

qt3pluginto() {
	if [ -z "${1}" -o -n "${2}" ]
	then
		error "qt3pluginto requires exactly one argument"
	fi

	export __QT3_PLUGIN_SUBDIR=${1}
}

doqt3plugin() {
	if ! defined __QT3_PLUGIN_SUBDIR
	then
		error "qt3pluginto must be called before doqt3plugin"
	fi

	exeinto ${QT3_PLUGINSDIR}/${__QT3_PLUGIN_SUBDIR}
	doexe ${@}
}
