set -e

pixmapsdir=/usr/share/pixmaps

dodir ${pixmapsdir}

if [ ! -e ${1} ]
then
	error "file ${1} does not exist"
fi

/bin/install -m0644 ${1} ${D}${pixmapsdir}/${2} || error "newicon ${1} failed"
